!Autor: Danilo Pantoja
!Curso Network Security
!Utilize o Cisco Packet Tracer 8.0.0
!Adaptado do lab 10.3.12
!Configuracoes do R1

hostname R1

interface g0/0/0
 ip address 10.1.1.1 255.255.255.252
 no shutdown

interface g0/0/1
 ip address 192.168.1.1 255.255.255.0
 no shutdown

!Rota estatica
ip route 0.0.0.0 0.0.0.0 10.1.1.2

!Min 10 caracteres para senha
security passwords min-length 10

!Adicionando dominio
ip domain-name netsec.com

!gerando a criptografia
crypto key generate rsa general-keys modulus 1024

!usuarios e senhas
username admin01 secret cisco12345
enable secret class12345

line console 0
 login local
 exec-timeout 5 0
 logging synchronous

line aux 0 
 login local
 exec-timeout 5 0

line vty 0 4
 login local
 transport input ssh
 exec-timeout 5 0

!copy running-config startup-config